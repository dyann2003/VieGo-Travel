@model Model.Models.User
@{
    ViewData["Title"] = "Create User";
}

<p id="modal-subtitle" class="px-6 pt-2 pb-4 text-sm text-gray-500">
    Create a new user with the details below
</p>

<form asp-action="Create" method="post" class="space-y-4 px-6 pb-6">
    @Html.AntiForgeryToken()

    <div>
        <label asp-for="FullName" class="block text-sm font-semibold text-gray-900 mb-1"></label>
        <input asp-for="FullName" class="block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 text-sm focus:outline-none focus:ring-1 focus:ring-indigo-600 focus:border-indigo-600" placeholder="Enter full name" required />
        <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
    </div>
    <div>
        <label asp-for="Password" class="block text-sm font-semibold text-gray-900 mb-1"></label>
        <input asp-for="Password" class="block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 text-sm focus:outline-none focus:ring-1 focus:ring-indigo-600 focus:border-indigo-600" type="password" required />
        <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="DateOfBirth" class="block text-sm font-semibold text-gray-900 mb-1"></label>
        <input asp-for="DateOfBirth" type="date" class="block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 text-sm focus:outline-none focus:ring-1 focus:ring-indigo-600 focus:border-indigo-600" required />
        <span asp-validation-for="DateOfBirth" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Gender" class="block text-sm font-semibold text-gray-900 mb-1"></label>
        <select asp-for="Gender" class="block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 text-sm focus:outline-none focus:ring-1 focus:ring-indigo-600 focus:border-indigo-600"  required>
            <option value="">Select Gender</option>
            <option>Male</option>
            <option>Female</option>
            <option>Other</option>
        </select>
        <span asp-validation-for="Gender" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Email" class="block text-sm font-semibold text-gray-900 mb-1"></label>
        <input asp-for="Email" class="block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 text-sm focus:outline-none focus:ring-1 focus:ring-indigo-600 focus:border-indigo-600" placeholder="Enter Email" />
        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="PhoneNumber" class="block text-sm font-semibold text-gray-900 mb-1"></label>
        <input asp-for="PhoneNumber" class="block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 text-sm focus:outline-none focus:ring-1 focus:ring-indigo-600 focus:border-indigo-600" placeholder="Enter Phone Number" />
        <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Address" class="block text-sm font-semibold text-gray-900 mb-1"></label>
        <input asp-for="Address" class="block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 text-sm focus:outline-none focus:ring-1 focus:ring-indigo-600 focus:border-indigo-600" placeholder="Enter address" />
        <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Status" class="block text-sm font-semibold text-gray-900 mb-1"></label>
        <select asp-for="Status" class="block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 text-sm focus:outline-none focus:ring-1 focus:ring-indigo-600 focus:border-indigo-600">
            <option value="1">Active</option>
            <option value="0">Inactive</option>
        </select>
        <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="UserType" class="block text-sm font-semibold text-gray-900 mb-1"></label>
        <select asp-for="UserType" class="block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 text-sm focus:outline-none focus:ring-1 focus:ring-indigo-600 focus:border-indigo-600">
            <option value="">Select Type</option>
            <option>Premium</option>
            <option>Standard</option>
        </select>
        <span asp-validation-for="UserType" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Notes" class="block text-sm font-semibold text-gray-900 mb-1"></label>
        <textarea asp-for="Notes" rows="3" class="block w-full rounded-md border border-gray-300 px-3 py-2 text-gray-900 text-sm focus:outline-none focus:ring-1 focus:ring-indigo-600 focus:border-indigo-600" placeholder="Enter Notes"></textarea>
        <span asp-validation-for="Notes" class="text-red-500 text-sm"></span>
    </div>

    <div class="flex space-x-2 pt-2">
        <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-4 py-2 rounded-md">
            Create
        </button>
        <a asp-action="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-900 font-semibold px-4 py-2 rounded-md">
            Cancel
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
