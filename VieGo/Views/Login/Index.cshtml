        @*    class="w-full bg-blue-50 text-gray-900 font-semibold py-3 rounded-md mb-2 flex justify-between items-center px-4 hover:bg-blue-100 focus:outline-none inline-flex items-center justify-between text-center no-underline"> *@
        @*     <span>Google</span> *@
        @*     <i class="fab fa-google text-lg"></i> *@
        @* </a> *@

        @* <button type="button" *@
        @*         class="w-full bg-blue-50 text-gray-900 font-semibold py-3 rounded-md mb-6 flex justify-between items-center px-4 hover:bg-blue-100 focus:outline-none"> *@
        @*     <span>Facebook</span> *@
        @*     <i class="fab fa-facebook-f text-lg"></i> *@
        @* </button> *@

        <p class="text-center text-gray-500 text-xs leading-tight">
            By continuing, you agree to these
            <a href="#" class="text-blue-600 hover:underline">Terms &amp; Conditions</a>.
        </p>
    </div>
</div>

