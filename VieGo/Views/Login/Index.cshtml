@model Model.DTOs.LoginDTO
@{
    ViewData["Title"] = "Login";
    var backgroundImageUrl = "https://wallpaperaccess.com/full/1318227.jpg";
}

<!-- Background image full màn hình -->
<div class="fixed inset-0 z-40">
    <img src="@backgroundImageUrl" alt="Background" class="w-full h-full object-cover" />
</div>

<!-- Modal login -->
<div id="login-register-modal" class="fixed inset-0 flex items-center justify-center p-4 z-50" role="dialog" aria-modal="true" aria-labelledby="modal-title">
    <div class="bg-white rounded-lg max-w-md w-full p-6 relative shadow-lg">
        <a href="Home" id="modal-close" aria-label="Close modal"
           class="absolute top-4 right-4 text-gray-600 hover:text-gray-900 focus:outline-none" type="button"
           onclick="document.getElementById('login-register-modal').classList.add('hidden')">
            <i class="fas fa-times text-base"></i>
        </a>
        <h2 id="modal-title" class="text-center font-semibold text-xl text-gray-900 mb-4">Log In/Register</h2>
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
                <strong class="font-bold">Lỗi! </strong>
                <span class="block sm:inline">@error.ErrorMessage</span>
            </div>
        }

        <form asp-action="Index" method="post" novalidate>
            <label for="Email" class="block text-gray-900 text-sm mb-1 font-normal">Email</label>
            <input asp-for="Email" id="Email" type="text" placeholder="Example:yourname@email.com"
                   class="w-full border border-gray-300 rounded-md px-3 py-2 text-gray-500 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent mb-4" />
            <span asp-validation-for="Email" class="text-red-600 text-sm mb-4 block"></span>

            <label for="Password" class="block text-gray-900 text-sm mb-1 font-normal">Password</label>
            <input asp-for="Password" id="Password" type="password" placeholder="Enter your password"
                   class="w-full border border-gray-300 rounded-md px-3 py-2 text-gray-500 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent mb-4" />
            <span asp-validation-for="Password" class="text-red-600 text-sm mb-4 block"></span>

            <button type="submit"
                    class="w-full bg-gray-200 text-gray-700 font-semibold py-2 rounded-md mb-2 hover:bg-gray-300 focus:outline-none">
                Continue
            </button>

            <p class="text-center text-sm mb-4">
                Don't have Account?
                <a href="@Url.Action("Email", "Register")" class="text-blue-600 hover:underline font-medium">Register with Email</a>
            </p>
        </form>

        @* <div class="flex items-center text-gray-400 text-xs mb-4"> *@
        @*     <div class="flex-grow border-t border-gray-300"></div> *@
        @*     <span class="mx-3 whitespace-nowrap">OR LOG IN/REGISTER WITH</span> *@
        @*     <div class="flex-grow border-t border-gray-300"></div> *@
        @* </div> *@

